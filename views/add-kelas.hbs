 <div class="right_col" role="main">
          <div class="">
            <div class="page-title">
              <div class="title_left">
                <h3>Tambah Kelas</h3>
              </div>
            </div>
            <div class="clearfix"></div>

            <div class="row">
              <div class="col-md-12 col-sm-12 col-xs-12">
                <div class="x_panel">
                  <div class="x_title">
                    <h2>Form Tambah Kelas</h2>

                    <div class="clearfix"></div>
                  </div>
                  <div class="x_content">

                    <form action="post-kelas" method="POST" class="form-horizontal form-label-left" novalidate>

                      <p>Isi form penambahan Kelas dibawah ini : </p>
                      
                      <span class="section">Data Kelas</span>
                     
                      <div class="item form-group">
                         <p style="color:red">{{error}}</p>
                          <p style="color:rgb(76, 0, 255)">{{info}}</p>
                        <label class="control-label col-md-3 col-sm-3 col-xs-12" for="name">Nama Kelas <span class="required">*</span>
                        </label>
                        <div class="col-md-6 col-sm-6 col-xs-12">
                          <input id="name" class="form-control col-md-7 col-xs-12" data-validate-length-range="6" data-validate-words="2" name="namaKelas" placeholder="Nama Kelas" required="required" type="text">
                        </div>
                      </div>
                  
                     
                      <div class="ln_solid"></div>
                      <div class="form-group">
                        <div class="col-md-6 col-md-offset-3">
                          <a href="/users/list-pertemuan" class="btn btn-primary">Cancel</a>
                          <button id="send" type="submit" class="btn btn-success">Submit</button>
                        </div>
                      </div>
                    </form>
                  </div>
                </div>
              </div>
            </div>
          </div>
        </div>